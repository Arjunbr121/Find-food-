<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/contentPage/index.css">
    <link rel="icon" href="images/contentPage/home/logo.png">
    <title>Find-food</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <!-- Desktop view -->
    <div id="container" class="container">
        <div id="menu">
            <div class="brand-logo">
                <img  src="images/home/logo1.png" alt="logo">
            </div>
            <div class="menu-items">
                <a href="http://localhost:2000/index">About</a>
                <a href="http://localhost:2000/food">Services</a>
                <a href="#">Your Orderd</a>
                <a href="#">Wish List</a>
                <a href="#">Address</a>
                <a href="#">Help</a>
            </div>
        </div>
        <div id="food-container">
            <div id="header">
                <div class="add-box">
                    <i class="fa fa-map-marker your-address" class="address"> Your Address</i>
                </div>
                <div class="util">
                    <i class="fa fa-search"> Search</i>
                    <i class="fa fa-tags"> Offers</i>
                    <i class="fa fa-cart-plus" id="cart-plus"> 0 items</i>
                </div>
            </div>
            <div id="food-items">

                <div id="Biryani">
                    <p id="category-name">Biryani</p>
                </div>

                <div id="SouthIndianDishes">
                    <p id="category-name">South Indian Dishes</p>
                </div>

                <div id="ChineseFood">
                    <p id="category-name">Chinese Food</p>

                </div>

                <div id="FastFood">
                    <p id="category-name">Fast Food</p>

                </div>
            </div>
            <div id="cart-page" class="cart-toggle">
                <p id="cart-title">Cart Items</p>
                <p id="m-total-amount">Total Amount: $100</p>
                <table>
                    <thead>
                        <td>Item</td>
                        <td>Name</td>
                        <td>Quantity</td>
                        <td>Price</td>
                    </thead>
                    <tbody id="table-body">

                    </tbody>
                </table>
            </div>
        </div>


        <div id="cart">
            <div class="taste-header">
                <div class="user">
                    <i class="fa fa-user-circle"> Account</i>
                </div>
            </div>
            <div id="category-list">
                <p class="item-menu">Go For Hunt</p>
                <div class="border"></div>

            </div>
            <div id="checkout" class="cart-toggle">
                <p id="total-item">Total Item : 5</p>
                <p id="total-price">Total Amount : $ 25</p>
                <p id="delevery">Free Delivery Above $ 40</p>
                <button class="cart-btn">Checkout</button>
            </div>
        </div>
    </div>
    <!-- javascript Files -->
    <script src="contentPage/index.js" type="module"></script>
</body>

</html>
